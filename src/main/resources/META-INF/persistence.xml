<?xml version="1.0" encoding="UTF-8"?>
<!--<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">-->
<persistence version="1.0"
         xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">

    <persistence-unit name="homecare" transaction-type="RESOURCE_LOCAL">
<!--        <non-jta-data-source>java:jboss/datasources/homecare</non-jta-data-source>-->
        <jta-data-source>java:jboss/datasources/homecare</jta-data-source>
        <class>com.homecare.model.entity.persons.Person</class>
        <class>com.homecare.model.entity.persons.Patient</class>
        <class>com.homecare.model.entity.persons.Profession</class>
        <class>com.homecare.model.entity.persons.Professional</class>
        <class>com.homecare.model.entity.persons.Specialty</class>

        <properties>
            <!--Configuracoes de Debug-->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="hibernate.show_sql" value="false" />
            <property name="hibernate.format_sql" value="false" />
<!--            <property name="use_sql_comments" value="true" />-->

        </properties>
    </persistence-unit>
</persistence>
